<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="10"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height= "match_parent"
    android:backgroundTint="#FFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:layout_weight="4"
        android:src="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp">

        <CheckBox
            android:id="@+id/ckbDieuKhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000"
            android:textSize="18sp"
            android:text="Tôi đồng ý với "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDieuKhoan"
            android:textStyle="italic"
            android:textColor="#3498db"
            android:textSize="18sp"
            android:text="điều khoản sử dụng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:text="Quý khách lựa chọn hình thức đăng nhập"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <Button
        android:id="@+id/btnDangNhapByFace"
        android:textSize="18sp"
        android:textColor="#FFFF"
        android:background="@drawable/border_button"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Đăng nhập bằng facebook  "
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />




</LinearLayout>